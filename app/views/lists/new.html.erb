
<%= simple_form_for([@user, List.new], :html => {:class => "box-signin"}) do |f| %>
  <h2><%= t('new_todo_list') %></h2>

  <div class="form-inputs">
    <%= f.hidden_field :user_id, :value => @user.id %>
    <%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :private, :inline_label =>  t('only_you_can_see_private_lists') %>
  </div>

  <div >
    <%= f.button :submit, t('create') %>
  </div>
<% end %>
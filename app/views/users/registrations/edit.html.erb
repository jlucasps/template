
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "box-signin" }) do |f| %>
  <%= f.error_notification %>

  <h2> <%= "#{t('edit')} #{resource_name.to_s.humanize}" %></h2>

  <div class="form-inputs">

    <%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true%>

    <%= f.input :password, :autocomplete => "off", :hint => t('messages.leave_blank_if_you_dont_want_to_change_it'), :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => t('messages.we_need_your_current_password_to_confirm_your_changes'), :required => true %>
  </div>

  <div>
    <%= f.button :submit, t('update') %>
  </div>
<% end %>

<div class="box-signin">
  <h5><%= t('cancel_my_account') %></h5>

  <p><%= t('unhappy') %> <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => t('are_you_sure') }, :method => :delete %>.</p>

  <%= link_to t('back'), :back %>

</div>